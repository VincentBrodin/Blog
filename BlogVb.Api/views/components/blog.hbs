
<div class="card w-full bg-base-100 shadow-xl hover:shadow-2xl transition-all">
    <figure>
        <img src="/images/{{blog.headerName}}" alt="Blog Image" class="h-48 w-full object-cover" />
    </figure>
    <div class="card-body">
        <h2 class="card-title text-xl font-bold">{{blog.name}}</h2>
        <p class="text-gray-500">{{blog.description}}</p>
        <div class="flex justify-between items-center text-sm text-gray-400 mt-4">
            <span>Read time: {{blog.readTimeMin}}m {{blog.readTimeSec}}s</span>
            <span>{{blog.createdAt}}</span>
        </div>

        <div class="flex justify-between items-center text-sm text-gray-400">
            <span>{{blog.author}}</span>
        </div>
        <div class="card-actions justify-end">
            <a class="btn btn-primary" href="/{{blog.url}}">Read More</a>
        </div>
    </div>
</div>
