<div class="container mx-auto max-w-3xl p-8">
    <div class="w-full flex flex-col mb-4">
        <div class="w-full flex flex-row justify-between items-center">
            <div>
                <h1 class="text-2xl font-bold">{{blog.name}}</h1>
            </div>
            <div>
                <h1 class="text-sm text-gray-500">
                    Read time: {{blog.readTimeMin}}m {{blog.readTimeSec}}s
                </h1>
            </div>
        </div>
        <h2 class="text-sm text-gray-500">{{blog.author}}</h2>
        <div class="w-full flex flex-row justify-between">
            <h1 class="text-sm text-gray-500">
                Last edited: {{blog.lastChangeAt}}
            </h1>
            <h1 class="text-sm text-gray-500">
                Uploaded: {{blog.createdAt}}
            </h1>
        </div>
    </div>
    <div class="aspect-w-16 aspect-h-9">
        <img class="object-cover"
             src="/blog/image/{{blog.headerName}}"
             alt="Header Image" />
    </div>
    <div class="my-8">
        <hr class="border-gray-200" />
    </div>

    <div class="prose prose-slate max-w-none">
        {{{content}}}
    </div>
</div>
