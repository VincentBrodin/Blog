<div class="navbar backdrop-blur border-b-4 border-base-200 border-dashed sticky top-0 left-0 right-0" style="z-index: 10;">
    <div class="flex-1">
        <a class="btn btn-ghost text-xl" href="/">[vinbro]</a>
    </div>
    <div class="flex-none gap-2">
        <label class="swap swap-rotate">
            <input id="dark-mode" type="checkbox" checked />
            <i class="bi bi-sun swap-off text-xl"></i>
            <i class="bi bi-moon-stars swap-on text-xl"></i>
        </label>

        {{#if account}}
        <div class="dropdown dropdown-end">
            <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
                <i class="bi bi-person-circle text-xl"></i>
            </div>
            <ul tabindex="0"
                class="menu menu-sm dropdown-content bg-base-200 rounded-box z-[1] mt-3 w-52 p-2 shadow">
                <li><a href="/account">Account</a></li>
                {{#role account.role}}
                <li><a href="/admin/content">Content</a></li>

                <li><a href="/admin/create">New post</a></li>
                {{/role}}
                <li><a href="/account/logout">Logout</a></li>
            </ul>
        </div>
        {{else}}
        <a class="btn btn-link" href="/account/login">Log in</a>
        {{/if}}
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const darkMode = document.getElementById("dark-mode");
        const html = document.querySelector("html");

        // Load the saved preference from localStorage
        const savedTheme = localStorage.getItem("theme");
        if (savedTheme) {
            html.setAttribute("data-theme", savedTheme);
            darkMode.checked = savedTheme === "retro";
        }

        darkMode.addEventListener("input", () => {
            if (darkMode.checked) {
                html.setAttribute("data-theme", "retro");
                localStorage.setItem("theme", "retro");
            } else {
                html.setAttribute("data-theme", "dim");
                localStorage.setItem("theme", "dim");
            }
        });
    });
</script>
